<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <div><%= f.submit "Update Book", class: "btn btn-success"%></div>
        <div>
          <span><%= link_to "Show", book_path(@book) %></span>
          |
          <span><%= link_to "Back", "/books" %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>



